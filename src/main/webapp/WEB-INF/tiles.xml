  <definition name="home" extends="logged-in">
    <put-attribute name="title" value="Home"/>
    <put-attribute name="body" value="/WEB-INF/tiles/home.jsp"/>
  </definition>

  <definition name="login" extends="not-logged-in">
    <put-attribute name="title" value="Login"/>
    <put-attribute name="body" value="/WEB-INF/tiles/login.jsp"/>
  </definition>

  <definition name="biker/input" extends="not-logged-in">
    <put-attribute name="title" value="Register a new biker"/>
